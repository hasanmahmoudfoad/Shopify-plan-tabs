{% style %}
  .color-red{
    color:#E1251B !important;
  }
  .color-bg-red{
    color:#fff;
    background:#E1251B;
  }
  .f-family{
        font-family: var(--font_stack_heading);
  }
  .f-size-small{
        font-size: 1.5rem;
  }
  .f-size-regular{
        font-size: 2rem;
  }
  .f-size-large{
        font-size: 2.5rem;
  }
  .f-size-xlarge{
        font-size: 3rem;
  }
  .f-size-xxlarge{
        font-size: 3.5rem;
  }
  /* ================================= */
  .giveaway-section{
    background : {{ section.settings.section_bg_color }};
    padding:5rem 0;
  }
giveaway-coutdown .cont {
  text-align: center;
}
giveaway-coutdown h1 {
  text-transform: capitalize;
}
