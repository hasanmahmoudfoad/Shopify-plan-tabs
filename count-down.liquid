<section id='{{ section.id }}' class="giveaway-section">
  <div class="container">
     <h4 class='mt-5 color-red text-center f-size-regular'>{{ section.settings.hint }}</h4>
     <h2 class='my-4 fst-italic text-center text-light f-size-xxlarge'>{{ section.settings.main_title }}</h2>
     <div class='my-3 text-center text-light f-size-small w-75 m-auto'>{{ section.settings.subtitle }}</div>

    <div class='row m-auto'>
      {% for block in section.blocks %}
        <div class='col-12 col-md-6 col-xxl-3 mb-4'>
          <div class='img-fluid'>
            <img src='{{ block.settings.giveaway_image | img_url : "master" }}' class='img-fluid w-75 m-auto d-block' alt='giveaway-{{ forloop.index }}'>
          </div>
               {% if block.settings.active_countdown %}
                        <script>
                          // Set the countdown date
                        let countDownDate_{{block.id}} = new Date("{{ block.settings.count_down_month }} {{ block.settings.count_down_days }} {{ block.settings.count_down_year }} {{ block.settings.count_down_hour}}:{{ block.settings.count_down_mins }}:00").getTime();
                        
                        // Update the count down every 1 second
                        let x_{{block.id}} = setInterval(function() {
                        
                          // Get the current time
                          let now_{{block.id}} = new Date().getTime();
                        
                          // Find the distance between current time and the count down date
                          let distance_{{block.id}} = countDownDate_{{block.id}} - now_{{block.id}};
                        
                        
                          // Time calculations for days, hours, minutes and seconds
                          let days_{{block.id}} = Math.floor(distance_{{block.id}} / (1000 * 60 * 60 * 24));
                          let hours_{{block.id}} = Math.floor((distance_{{block.id}} % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                          let minutes_{{block.id}} = Math.floor((distance_{{block.id}} % (1000 * 60 * 60)) / (1000 * 60));
                          let seconds_{{block.id}} = Math.floor((distance_{{block.id}} % (1000 * 60)) / 1000);
                        
                          // Display the result in the corresponding elements
                          document.getElementById("days_{{block.id}}").innerHTML = days_{{block.id}} < 10 ? '0' + days_{{block.id}} : days_{{block.id}};
                          document.getElementById("hours_{{block.id}}").innerHTML = hours_{{block.id}} < 10 ? '0' + hours_{{block.id}} : hours_{{block.id}};
                          document.getElementById("minutes_{{block.id}}").innerHTML = minutes_{{block.id}} < 10 ? '0' + minutes_{{block.id}} : minutes_{{block.id}};
                          document.getElementById("seconds_{{block.id}}").innerHTML = seconds_{{block.id}} < 10 ? '0' + seconds_{{block.id}} : seconds_{{block.id}};
                          
                        
                          // If the count down is finished display Happy New Year text
                          if (distance_{{block.id}} < 0) {
                            clearInterval(x_{{block.id}});
                            document.getElementById("days_{{block.id}}").innerHTML = "00";
                            document.getElementById("hours_{{block.id}}").innerHTML = "00";
                            document.getElementById("minutes_{{block.id}}").innerHTML = "00";
                            document.getElementById("seconds_{{block.id}}").innerHTML = "00";
                          }
                        }, 1000);
                        </script>





                 
                        <giveaway-coutdown class='w-50 m-auto'>
                          <div class='cont'>
                              <div class='counters'>
                                <div class='counter'>
                                  <span id='days_{{block.id}}'>NA</span>
                                  <p>Days</p>
                                </div>
                                
                                <div class='counter'>
                                  <span id='hours_{{block.id}}'>NA</span>
                                  <p>Hours</p>
                                </div>
                                
                                <div class='counter'>
                                  <span id='minutes_{{block.id}}'>NA</span>
                                  <p>Minutes</p>
                                </div>
                                
                                <div class='counter'>
                                  <span id='seconds_{{block.id}}'>NA</span>
                                  <p>Seconds</p>
                                </div>
                                
                              </div>
                        </div>
                        </giveaway-coutdown>
                {% else %}
                    <div class='p-3 w-75 m-auto border border-secondary border-2 rounded-4 bg-dark'>
                       <h3 class='fst-italic text-center' style='color:#959595;font-size: 25px;'>GIVEAWAY ENDED </h3>
                    </div>
          {% endif %}
       <h2 class='my-4 fst-italic text-center text-light'>{{ block.settings.giveaway_product_title }}</h2>
       <a href='{{ block.settings.product_url }}' class='mb-5 color-red text-decoration-underline text-center d-block w-75 m-auto' style='font-size: 30px;'>VIEW BIKE DETAILS</a>

            
        </div>
      {% endfor %}
    </div>
  </div>
</section>




